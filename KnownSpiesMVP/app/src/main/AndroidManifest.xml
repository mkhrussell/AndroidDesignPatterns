<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kamrul.knownspies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KnownSpiesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.KnownSpies">
        <activity
            android:name=".Activities.SpyList.SpyListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.Details.SpyDetailsActivity"
            android:label="@string/title_activity_spy_details" />

        <activity
            android:name=".Activities.SecretDetails.SecretDetailsActivity"
            android:label="@string/title_activity_secret_details" />

    </application>

</manifest>